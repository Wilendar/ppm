{
  "name": "ppm-backend-api",
  "version": "1.0.0",
  "description": "Backend API for Prestashop Product Manager (PPM) - comprehensive product management system",
  "main": "dist/src/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "cp package.json dist/",
    "docker:build": "docker build -t ppm-backend .",
    "docker:run": "docker run -p 3001:3001 ppm-backend"
  },
  "keywords": [
    "prestashop",
    "product-management",
    "express",
    "typescript",
    "api",
    "postgresql",
    "redis",
    "oauth"
  ],
  "author": "Kamil Wilinski",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
