# ===========================================
# PPM Environment Configuration
# ===========================================

# Application
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL (Primary Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ppm_db
DB_USER=ppm_user
DB_PASSWORD=ppm_password

# MySQL (PrestaShop Compatibility)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=ppm_prestashop
MYSQL_USER=ppm_mysql_user
MYSQL_PASSWORD=ppm_mysql_password

# Redis (Cache & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# ===========================================
# Security Configuration
# ===========================================

# JWT Tokens (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars

# Data Encryption (CHANGE IN PRODUCTION!)
ENCRYPTION_KEY=your-encryption-key-32-chars-long

# ===========================================
# OAuth Configuration - Google Workspace
# ===========================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DOMAIN_RESTRICTION=yourdomain.com

# ===========================================
# OAuth Configuration - Microsoft Office 365
# ===========================================
MICROSOFT_CLIENT_ID=your-microsoft-application-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT=your-tenant-id-or-common

# ===========================================
# File Upload Configuration
# ===========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp,pdf,csv,xlsx

# ===========================================
# Email Configuration (Optional - for notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=PPM System <noreply@yourdomain.com>

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# PrestaShop API Configuration
# ===========================================
# These will be stored encrypted in database per shop
# This is just for testing/default values
DEFAULT_PRESTASHOP_TIMEOUT=30000
DEFAULT_PRESTASHOP_RATE_LIMIT=10

# ===========================================
# Development Tools
# ===========================================
# phpMyAdmin
PHPMYADMIN_PORT=8080

# pgAdmin
PGADMIN_PORT=8081
PGADMIN_EMAIL=admin@ppm.local
PGADMIN_PASSWORD=pgadmin_password

# ===========================================
# Production Only Settings
# ===========================================
# SSL Configuration (Production)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key

# Database SSL (Production)
# DB_SSL=true
# DB_SSL_CA=/path/to/ca-certificate.crt

# Security Headers (Production)
# HELMET_ENABLED=true
# CORS_ORIGIN=https://yourdomain.com

# ===========================================
# Monitoring & Analytics (Optional)
# ===========================================
# Sentry Error Tracking
# SENTRY_DSN=your-sentry-dsn-url

# Google Analytics
# GA_TRACKING_ID=GA-XXXXXXXXX

# ===========================================
# API Documentation
# ===========================================
API_DOCS_ENABLED=true
API_DOCS_PATH=/api-docs